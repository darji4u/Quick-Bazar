<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:padding="16dp"
       android:background="@drawable/card_background"
       android:layout_height="wrap_content">

       <LinearLayout
           android:id="@+id/linearLayout6"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/poppins_sb"
               android:text="Edit Product Detail"
               android:textColor="@color/black2"
               android:textSize="20sp"

               />


           <TextView
               android:id="@+id/lbProductName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="50dp"
               android:fontFamily="@font/poppins_sb"
               android:text="Product Name"
               android:textColor="@color/grey"

               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/tvProductName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/poppins_sb"
               android:text="Product Name"
               android:textColor="@color/black2"
               android:textSize="16sp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <EditText
               android:id="@+id/etPrize"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:background="@drawable/card_background_yellow"
               android:backgroundTint="@color/greyLight"
               android:fontFamily="@font/poppins_m"
               android:hint="Enter Price"
               android:imeOptions="actionDone"
               android:inputType="number"
               android:paddingLeft="10dp"
               android:paddingTop="16dp"
               android:paddingRight="10dp"
               android:paddingBottom="16dp"
               android:text=""
               android:textColor="@color/black2"
               android:textColorHint="@color/grey"
               android:textSize="14dp"
               app:layout_constraintTop_toBottomOf="@+id/textView"
               tools:layout_editor_absoluteX="16dp" />



           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               android:layout_marginTop="20dp"
               android:text="Availabe Colors"
               android:textColor="@color/black2" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:orientation="horizontal"

               >

               <LinearLayout
                   android:id="@+id/btnWhite"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="10dp"
                   android:background="@drawable/card_background"
                   android:padding="10dp"
                   android:text=""
                   android:textColor="@color/black2"
                   android:textColorHint="@color/grey">

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:background="@drawable/card_background_yellow"
                       android:backgroundTint="@color/greyLight" />
               </LinearLayout>

               <LinearLayout
                   android:id="@+id/btnBlack"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="10dp"
                   android:background="@drawable/card_background"
                   android:padding="10dp"
                   android:text=""
                   android:textColor="@color/black2"
                   android:textColorHint="@color/grey">

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:background="@drawable/card_background"
                       android:backgroundTint="@color/black2" />
               </LinearLayout>

               <LinearLayout
                   android:id="@+id/btnRed"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="10dp"
                   android:background="@drawable/card_background"
                   android:padding="10dp"
                   android:text=""
                   android:textColor="@color/black2"
                   android:textColorHint="@color/grey">

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:background="@drawable/card_background"
                       android:backgroundTint="@color/blueDark" />
               </LinearLayout>

               <LinearLayout
                   android:id="@+id/btnBlue"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="10dp"
                   android:background="@drawable/card_background"
                   android:padding="10dp"
                   android:text=""
                   android:textColor="@color/black2"
                   android:textColorHint="@color/grey">

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:background="@drawable/card_background"
                       android:backgroundTint="@color/red" />
               </LinearLayout>

               <LinearLayout
                   android:id="@+id/btnGreen"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="10dp"
                   android:background="@drawable/card_background"
                   android:padding="10dp"
                   android:text=""
                   android:textColor="@color/black2"
                   android:textColorHint="@color/grey">

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:background="@drawable/card_background"
                       android:backgroundTint="@color/green" />
               </LinearLayout>

           </LinearLayout>


           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               android:layout_marginTop="20dp"
               android:text="Availabe Size"
               android:textColor="@color/black2" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:orientation="horizontal"

               >

               <LinearLayout
                   android:id="@+id/btnS"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="10dp"

                   android:padding="10dp"
                   android:text=""
                   android:textColor="@color/black2">

                   <TextView
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:fontFamily="@font/poppins_sb"
                       android:text="S"
                       android:textAlignment="center"
                       android:textColor="@color/black2" />
               </LinearLayout>

               <LinearLayout
                   android:id="@+id/btnM"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="10dp"

                   android:padding="10dp"
                   android:text=""
                   android:textColor="@color/black2">

                   <TextView
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:fontFamily="@font/poppins_sb"
                       android:text="M"
                       android:textAlignment="center"
                       android:textColor="@color/black2" />
               </LinearLayout>

               <LinearLayout
                   android:id="@+id/btnL"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="10dp"

                   android:padding="10dp"
                   android:text=""
                   android:textColor="@color/black2">

                   <TextView
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:fontFamily="@font/poppins_sb"
                       android:text="L"
                       android:textAlignment="center"
                       android:textColor="@color/black2" />
               </LinearLayout>

               <LinearLayout
                   android:id="@+id/btnXL"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="10dp"
                   android:padding="10dp"
                   android:text=""
                   android:textColor="@color/black2">

                   <TextView
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:fontFamily="@font/poppins_sb"
                       android:text="XL"
                       android:textAlignment="center"
                       android:textColor="@color/black2" />
               </LinearLayout>


           </LinearLayout>





           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:weightSum="2"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toBottomOf="parent"
               tools:layout_editor_absoluteX="16dp">

               <TextView
                   android:id="@+id/btnAvailable"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textColor="@color/blueDark"
                   android:textAlignment="center"
                   android:paddingTop="10dp"
                   android:paddingBottom="10dp"
                   android:layout_marginRight="8dp"
                   android:background="@drawable/card_background_blue"
                   android:text="Available" />
               <TextView
                   android:id="@+id/btnUnAvailable"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textColor="@color/grey"
                   android:textAlignment="center"
                   android:paddingTop="10dp"
                   android:layout_marginLeft="8dp"
                   android:paddingBottom="10dp"
                   android:background="@drawable/card_background"

                   android:text="Unavailable" />

           </LinearLayout>

           <TextView
               android:id="@+id/errorMsg"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Please select address"
               android:textColor="@color/red"
               android:layout_marginTop="20dp"
               android:visibility="gone"
               />

           <TextView
               android:id="@+id/btnUpdate"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="50dp"
               android:background="@drawable/card_background"
               android:backgroundTint="@color/primary"
               android:padding="16dp"
               android:text="Update"

               android:textAlignment="center"
               android:textColor="@color/white" />

           <TextView
               android:id="@+id/btnCancel"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:padding="16dp"
               android:text="Cancel"
               android:textAlignment="center"
               android:textColor="@color/grey" />

       </LinearLayout>



   </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>